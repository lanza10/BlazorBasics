<Router AppAssembly="@typeof(App).Assembly">
    
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <Authorizing>
                <p>Please, wait while register is being authorized</p>
            </Authorizing>
            <NotAuthorized>
                <BlazorWasmBlogClient.Pages.RedirectToLogin></BlazorWasmBlogClient.Pages.RedirectToLogin>
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <CascadingAuthenticationState>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Error, there's nothing at this address.</p>
        </LayoutView>
        </CascadingAuthenticationState>
    </NotFound>

</Router>
